<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_workshop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.adityathakker.susadmin.ui.activity.AddWorkshopActivity"
    tools:showIn="@layout/activity_add_workshop">
    <android.support.design.widget.TextInputLayout
        android:id="@+id/content_add_researcher_textinputlayout_first_name"
        android:layout_width="match_parent"
        android:hint="Enter Workshop Name"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/content_add_workshop_textinputledittext_workshop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/content_add_workshop_textinputlayout_system_name"
        android:layout_width="match_parent"
        android:hint="Enter System Name"
        android:layout_height="wrap_content"
        android:layout_below="@id/content_add_researcher_textinputlayout_first_name">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/content_add_workshop_textinputledittext_system_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"/>
    </android.support.design.widget.TextInputLayout>

    <CheckBox
        android:text="Show Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_add_workshop_textinputlayout_system_name"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/content_add_workshop_checkbox_show_score" />

    <CheckBox
        android:text="Reason Compulsory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_add_workshop_checkbox_show_score"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/content_add_workshop_checkbox_reason_compulsory" />

    <Button
        android:text="Add Workshop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_below="@+id/content_add_workshop_checkbox_reason_compulsory"
        android:background="@drawable/custom_button"
        android:id="@+id/content_add_workshop_button_add"
        android:layout_marginTop="10dp"/>


</RelativeLayout>
