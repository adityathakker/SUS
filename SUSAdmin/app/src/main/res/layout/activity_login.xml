<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.adityathakker.sus.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/activity_login_logo_layout"
        android:background="@color/colorPrimary">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/activity_login_header_title"
            android:textSize="100sp"
            android:textColor="@color/white"
            android:textAlignment="center"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"
            android:layout_gravity="center"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"
        android:layout_below="@id/activity_login_logo_layout"
        android:padding="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:text="@string/activity_login_welcome_text"
            android:textColor="#101010"
            android:id="@+id/activity_login_welcome_text"
            android:layout_marginTop="10dp"
            android:gravity="center" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#383838"
            android:text="@string/activity_login_support_text"
            android:id="@+id/activity_login_support_text"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/activity_login_welcome_text"/>

        <EditText
            android:id="@+id/activity_login_edittext_email"
            android:layout_below="@id/activity_login_support_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:background="@drawable/custom_login_edittext"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:hint="Enter Username"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:textColor="#B9BDC0"
            android:text=""/>

        <EditText
            android:id="@+id/activity_login_edittext_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:background="@drawable/custom_login_edittext"
            android:layout_below="@id/activity_login_edittext_email"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:textColor="#B9BDC0"
            android:hint="Enter Password"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/activity_login_edittext_password"
            android:text="@string/activity_login_button_text"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="16dp"
            android:textColor="#ffffff"
            android:textStyle="normal"
            android:shadowRadius="0"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/activity_login_button_login"
            android:background="@drawable/custom_button" />

    </RelativeLayout>

</RelativeLayout>
