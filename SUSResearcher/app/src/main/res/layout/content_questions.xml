<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_questions"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.adityathakker.susresearcher.QuestionsActivity"
    tools:showIn="@layout/activity_questions">

    <com.adityathakker.susresearcher.RecyclerEmptyView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content_questions_recyclerview"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/no_internet"
        android:text="No Internet Connection"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

</RelativeLayout>
